<?xml version='1.0' encoding='utf-8'?>
<widget id="onetwo360.viewer" version="0.0.1" 
  xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>360 widget</name>
    <shortdescription>HTML5-widget for displaying 360ยบ-pictures</shortdescription>
    <description>
      Simple demo of widget for displaying 360ยบ-images. 

      It is touch-optimised, has zoom support, and has no dependencies.
    </description>
    <author email="app@solsort.com" href="http://solsort.com">OneTwo360, and solsort.com</author>
    <icon src="res/360_logo.png" />
    <content src="index.html" />

    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />

    <preference name="permissions" value="none" /> 
    <preference name="orientation" value="default" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="false" />
    <preference name="prerendered-icon" value="false" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="detect-data-types" value="false" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="auto-hide-splash-screen" value="true" />

